<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ARCourse1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepBlue</item>
        <item name="colorPrimaryVariant">#5e35b1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="expandedBarTextStyle" parent="Theme.ARCourse1">
        <!-- Customize your theme here. -->
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_menu</item>
    </style>

    <style name="Deskripsi" parent="Theme.ARCourse1">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/productsansregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name="Header" parent="Theme.ARCourse1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/productsansregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:textAlignment">inherit</item>
    </style>
</resources>